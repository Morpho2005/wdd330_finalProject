<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form id="loginForm" action="/account/login" method="post">
    <fieldset>
        <label>Email: <input required type="email" name="account_email" placeholder="Enter a valid email address"></label>
        <label>Password: <input required type="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"></label>
        <input type="submit" value="Login">
    </fieldset>
    <p>No account? <a href="/account/signUp">Sign-up</a></p>
</form>